<%= form_for(@feedback, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @feedback.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h4>

      <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <h4><%= @feedback.user.email %></h4>
    </div>
  </div>

  <div class="form-group" style="display: none !important;">
    <%= f.label "Student Comment", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :comment, class: "form-control", value: "" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label "Question Being Answered", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :questionbeinganswered, class: "form-control", value: @feedback.comment %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Instructor Response", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :respond, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
