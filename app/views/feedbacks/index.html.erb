<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>User</th>
            <th>Student Comment</th>
            <th>Instructor Response</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @feedbacks) do |feedback| %>
            <td><%= feedback.user.email %></td>
            <td><%= feedback.comment %></td>
            <td><%= feedback.respond %></td>
            <td> 

              <%= link_to 'View Student Course', :controller => "course", :action => "show", :id => feedback.user_id %></td>
        <td><%= link_to 'Add/Edit Instructor Response', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Delete Student Comment', feedback, method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
