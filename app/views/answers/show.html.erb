<div class="page-header">
  <%= link_to answers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_answer_path(@answer), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show answer</h1>
</div>

<dl class="dl-horizontal">
  <dt>Response:</dt>
  <dd><%= @answer.response %></dd>

  <dt>Question:</dt>
  <dd><%= @answer.question_id %></dd>

  <dt>User:</dt>
  <dd><%= @answer.user_id %></dd>

</dl>
