<%= form_for(@answer, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @answer.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h4>

      <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :response, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :response, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :question_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :question_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :user_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
